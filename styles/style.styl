.todoField{
    border-radius:0;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -webkit-transition: border linear 0.2s,box-shadow linear 0.2s;
    -moz-transition: border linear 0.2s,box-shadow linear 0.2s;
    -ms-transition: border linear 0.2s,box-shadow linear 0.2s;
    -o-transition: border linear 0.2s,box-shadow linear 0.2s;
    transition: border linear 0.2s,box-shadow linear 0.2s;
    display: inline-block;
    height: 33px;
    padding: 4px;
    margin-bottom: 9px;
    font-size: 13px;
    line-height: 18px;
    color: #555555;
    border: 1px solid #cccccc;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    font-weight: normal;
    vertical-align: middle;
}
li.ui-state-default{
    background:#fff;
    border:none;
    border-bottom:1px solid #ddd;
    padding: 10px;
    overflow: hidden;
}
li.ui-state-default input[type="checkbox"]{
	margin-right: 10px;
	/* -webkit-appearance: none; */
	background: url("uncheck-check.png") no-repeat 0 0;
	width: 22px;
	height: 22px;
}
li.ui-state-default input[type="checkbox"]:checked{
	background: url("uncheck-check.png") no-repeat -23px 0;
}
li.ui-state-default label {
	font-weight: normal;
    padding: 5px 0 0;
}
li.ui-state-default:last-child{
    border-bottom:none;
}
.done-true {
  text-decoration: line-through;
  color: grey;
}
a {
	margin-left: 5px;
}
.clear-box {
	background:#fff;
    border:none;
    border-bottom:1px solid #ddd;
    padding: 10px;
    overflow: hidden;
}

.pre {
